+        int number = scanner.nextInt();
+        for (int counter = 1; counter <= number; counter++) {
+
+            int multiple = 0;
+            for (int divisor = 1; divisor <= counter; divisor++) {
+
+                int remainder = counter % divisor;
+
+                if (remainder == 0) {
+                    multiple = multiple + 1;
+
+                }
+
